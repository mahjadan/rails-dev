<div class="block">
    <%= form_with(model: task, class: "text-lg inline-block my-3 w-72") do |form| %>
        <%= form.check_box :completed,
            data:{
                id: task.id,
                # this is specific to stimulus, to call tasks_controller#toggle in js file
                action: "tasks#toggle"
            },
        class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-2 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
        <%= task.description %>
    <% end %>

    <%= link_to "Edit", edit_task_path(task) , class: 'btn-primary bg-gray-300'%>

    <div class="inline-block ml-2">

        <%= button_to "Delete", task_path(task),method: :delete,
        data: {
        # this is specific to stimulus, to call tasks_controller#delete in js file
            action: "tasks#delete"
        },
        class: "btn-primary bg-red-200" %>
    </div>

</div>